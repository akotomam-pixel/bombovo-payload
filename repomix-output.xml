    body:    JSON.stringify(body),
  })
  if (!res.ok) throw new Error(`Create stredisko failed (${res.status}): ${await res.text()}`)
  const data = await res.json() as { doc?: { id?: string } }
  return data.doc?.id ?? '(unknown)'
}

